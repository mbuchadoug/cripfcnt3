<style>
/* Popup Styling */
.popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.popup-box {
    background: #fff;
    padding: 40px;
    border-radius: 10px;
    max-width: 500px;
    width: 90%;
    text-align: center;
    position: relative;
    transform: translateY(-50px);
    transition: all 0.3s ease;
}

.popup-overlay.active {
    display: flex;
    opacity: 1;
}

.popup-overlay.active .popup-box {
    transform: translateY(0);
}

.popup-title {
    color: #2f2f2f;
    font-size: 24px;
    margin-bottom: 15px;
}

.popup-title.success {
    color: #4CAF50;
}

.popup-title.error {
    color: #f44336;
}

.popup-message {
    color: #666;
    line-height: 1.6;
    font-size: 16px;
}
</style>

<script>
// Modify your form submission handler
document.getElementById('contact-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    const popup = document.getElementById('popupOverlay');
    const popupTitle = popup.querySelector('.popup-title');
    const popupMessage = popup.querySelector('.popup-message');

    fetch(form.action, {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if(data.result === 'success') {
            popupTitle.classList.add('success');
            popupTitle.classList.remove('error');
            popupTitle.textContent = 'Success!';
            popupMessage.textContent = data.message;
        } else {
            popupTitle.classList.add('error');
            popupTitle.classList.remove('success');
            popupTitle.textContent = 'Error!';
            popupMessage.textContent = data.message;
        }
        popup.classList.add('active');
        form.reset();
    })
    .catch(error => {
        popupTitle.classList.add('error');
        popupTitle.textContent = 'Error!';
        popupMessage.textContent = 'An unexpected error occurred. Please try again.';
        popup.classList.add('active');
    });
});

// Close popup handler
document.querySelectorAll('.close-popup, .popup-overlay').forEach(element => {
    element.addEventListener('click', function(e) {
        if(e.target === this) {
            document.getElementById('popupOverlay').classList.remove('active');
        }
    });
});
</script>







