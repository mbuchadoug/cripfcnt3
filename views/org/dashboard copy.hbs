{{!-- views/org/dashboard.hbs --}}
<!doctype html>
<html>
<head><meta charset="utf-8"><title>{{org.name}} Dashboard</title></head>
<body>
  {{> navbar}}
  <main>
    <h1>{{org.name}} — Dashboard</h1>
    <p>{{org.description}}</p>
    <p>You are a <strong>{{membership.role}}</strong> in this organization.</p>

    <section>
      <h2>Modules</h2>
      {{#if modules.length}}
        <ul>
          {{#each modules}}
            <li>
              <strong>{{this.title}}</strong> — <small>{{this.slug}}</small>
              <a href="/org/{{org.slug}}/quiz?module={{this.slug}}">Take Quiz</a>
              {{!-- optionally link to materials --}}
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>No modules defined yet. Ask your org admin to create modules.</p>
      {{/if}}
    </section>

    {{#if (eq membership.role "manager")}}
      <section>
        <h2>Manager Actions</h2>
        <a href="/admin/orgs/{{org.slug}}/manage">Manage Members & Invites</a>
      </section>
    {{/if}}
  </main>
</body>
</html>
