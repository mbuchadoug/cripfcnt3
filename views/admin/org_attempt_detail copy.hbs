{{!-- views/admin/org_attempt_detail.hbs --}}
<!doctype html>
<html>
<head><meta charset="utf-8"><title>Attempt Review — {{org.name}}</title></head>
<body style="font-family:system-ui, Arial; padding:20px;">
  <a href="/admin/orgs/{{org.slug}}/attempts">← Back to attempts</a>
  <h1>Attempt Review — {{org.name}}</h1>

  <h3>User: {{#if user}}{{user.name}} ({{user.email}}){{else}}Unknown{{/if}}</h3>
  <p>Module: <strong>{{attempt.module}}</strong> &nbsp;&nbsp; Score: <strong>{{attempt.score}} / {{attempt.maxScore}}</strong> &nbsp;&nbsp; Passed: <strong>{{#if attempt.passed}}Yes{{else}}No{{/if}}</strong></p>
  <p>Started: {{attempt.startedAt}} &nbsp; Finished: {{attempt.finishedAt}}</p>

  <hr>

  {{#if answers.length}}
    <ol>
      {{#each answers}}
        <li style="margin-bottom:18px; padding:12px; border-radius:6px; background:#fafafa;">
          <div style="font-weight:600;">{{this.questionText}}</div>

          <div style="margin-top:8px;">
            <div><strong>Your answer:</strong>
              {{#if this.yourAnswerText}}
                <span style="{{#if this.correct}}color:green{{else}}color:#c0392b{{/if}}"> {{this.yourAnswerText}}</span>
              {{else}}
                <em>No answer</em>
              {{/if}}
            </div>

            <div style="margin-top:6px;"><strong>Correct answer:</strong> {{#if this.correctAnswerText}}{{this.correctAnswerText}}{{else}}(not available){{/if}}</div>

            <div style="margin-top:6px;">
              <strong>Result:</strong>
              {{#if this.correct}} <span style="color:green">Correct ✅</span> {{else}} <span style="color:#c0392b">Wrong ❌</span> {{/if}}
            </div>
          </div>
        </li>
      {{/each}}
    </ol>
  {{else}}
    <p>No per-question answer details are available for this attempt.</p>
  {{/if}}
</body>
</html>
