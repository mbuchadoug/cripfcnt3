<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{title}}</title>

  <style>
    :root {
      --sidebar-bg: #0b2545;
      --sidebar-hover: #133b63;
      --sidebar-text: #e9f1ff;
      --accent: #0b63d6;
      --bg: #f5f7fa;
    }

    body {
      margin: 0;
      font-family: Inter, system-ui, sans-serif;
      background: var(--bg);
      display: flex;
    }

    /* ---- SIDEBAR ---- */
    .sidebar {
      width: 245px;
      background: var(--sidebar-bg);
      color: var(--sidebar-text);
      height: 100vh;
      padding: 22px 0;
      display: flex;
      flex-direction: column;
      position: fixed;
      left: 0;
      top: 0;
    }

    .sidebar h2 {
      font-size: 1.3rem;
      text-align: center;
      margin: 0 0 20px 0;
      padding-bottom: 10px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .sidebar a {
      padding: 14px 22px;
      text-decoration: none;
      color: var(--sidebar-text);
      font-size: 0.95rem;
      display: block;
    }

    .sidebar a:hover {
      background: var(--sidebar-hover);
    }

    /* ---- MAIN ---- */
    .main {
      margin-left: 245px;
      padding: 28px;
      width: calc(100% - 245px);
    }

    h1 {
      margin-top: 0;
      color: #0b2545;
    }

    .controls {
      display: flex;
      gap: 12px;
      align-items: center;
      background: #fff;
      padding: 14px;
      border-radius: 10px;
      box-shadow: 0 6px 16px rgba(11,37,69,0.05);
      margin-bottom: 16px;
    }

    select, input {
      padding: 8px 10px;
      border: 1px solid #cbd5e1;
      border-radius: 8px;
      font-size: 0.9rem;
    }

    button {
      padding: 8px 14px;
      border: none;
      background: var(--accent);
      color: #fff;
      border-radius: 8px;
      cursor: pointer;
    }

    button:hover {
      background: #084fb0;
    }

    .btn {
      text-decoration: none;
      padding: 8px 12px;
      background: var(--accent);
      color: #fff;
      border-radius: 8px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 12px;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 6px 16px rgba(11,37,69,0.04);
    }

    th, td {
      padding: 10px 12px;
      border-bottom: 1px solid #e6eef8;
      text-align: left;
    }

    th {
      background: #f3f8ff;
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.03em;
      color: #475569;
    }

    .small {
      margin-left: auto;
      font-size: 0.9rem;
      color: #666;
    }
  </style>
</head>

<body>

  <!-- SIDEBAR -->
  <div class="sidebar">
    <h2>Admin Panel</h2>

    <a href="/admin/users">üë§ Users</a>
    <a href="/admin/visits">üìä Visit Stats</a>
    <a href="/admin/unique-visitors">üßç Unique Visitors</a>
    <a href="/admin/visitors-live">üî¥ Live Logs</a>

    <hr style="border-color:rgba(255,255,255,0.1); margin: 14px 0;">

    <a href="/audit">üìò SCOI Audit</a>
    <a href="/auth/logout" style="margin-top:auto; color:#ffdddd">üö™ Logout</a>
  </div>


  <!-- MAIN CONTENT -->
  <div class="main">
    <h1>{{title}}</h1>

    <div class="controls">
      <form method="get" action="/admin/visits" style="display:flex;gap:12px;align-items:center">
        <label>
          Period:
          <select name="period">
            <option value="day" {{#if isDay}}selected{{/if}}>Day</option>
            <option value="month" {{#if isMonth}}selected{{/if}}>Month</option>
            <option value="year" {{#if isYear}}selected{{/if}}>Year</option>
          </select>
        </label>

        <label>
          Days:
          <input type="number" name="days" value="{{days}}" min="1" />
        </label>

        <button type="submit">Show</button>
      </form>

      <div class="small">Rows: {{stats.length}}</div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Bucket</th>
          <th>Hits</th>
        </tr>
      </thead>
      <tbody>
        {{#each stats}}
          <tr>
            <td>{{this._id}}</td>
            <td>{{this.hits}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</body>
</html>
