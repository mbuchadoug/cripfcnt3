<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin â€” Live Visitors</title>
  <style>
    /* Modern fixed navbar + layout */
    :root{
      --bg:#f4f7fb; --card:#ffffff; --muted:#6b7280; --accent:#0b63d6; --accent-600:#0954b3; --glass: rgba(255,255,255,0.6);
      --radius:12px; --shadow: 0 10px 30px rgba(11,37,69,0.06);
    }
    *{box-sizing:border-box}
    body{margin:0;background:linear-gradient(180deg,#f7fbff 0%,var(--bg) 100%);font-family:Inter,system-ui,-apple-system,'Segoe UI',Roboto,Helvetica,Arial,sans-serif;color:#07203a}

    /* NAVBAR */
    .navbar{position:fixed;top:0;left:0;right:0;height:64px;background:rgba(255,255,255,0.9);backdrop-filter:blur(6px);box-shadow:0 4px 18px rgba(15,23,42,0.06);display:flex;align-items:center;gap:16px;padding:0 20px;z-index:100}
    .brand{display:flex;align-items:center;gap:12px}
    .logo{width:36px;height:36px;border-radius:8px;background:linear-gradient(135deg,var(--accent),var(--accent-600));display:inline-block;box-shadow:0 4px 12px rgba(11,99,214,0.14)}
    .brand h1{font-size:1rem;margin:0;color:var(--accent-600);letter-spacing:0.2px}

    .nav-links{display:flex;gap:8px;margin-left:18px}
    .nav-link{padding:8px 12px;border-radius:10px;font-weight:600;color:#0b2545;text-decoration:none;display:inline-flex;align-items:center;gap:8px}
    .nav-link:hover{background:#f3f6ff}
    .nav-link.active{background:linear-gradient(90deg,#e7f0ff,#eef6ff);color:var(--accent-600);box-shadow:inset 0 -1px 0 rgba(11,37,69,0.02)}

    .nav-spacer{flex:1}
    .search-wrapper{display:flex;align-items:center;gap:8px}
    .search-input{border:1px solid #e7eef9;padding:8px 10px;border-radius:999px;outline:none;width:220px}

    .user-menu{display:flex;align-items:center;gap:12px}
    .avatar{width:36px;height:36px;border-radius:999px;background:#eef4ff;display:inline-flex;align-items:center;justify-content:center;font-weight:700;color:var(--accent-600)}
    .user-name{font-size:0.9rem;color:var(--muted)}

    /* Page content layout */
    .page{padding:92px 20px 32px;max-width:1200px;margin:0 auto}
    .grid{display:grid;grid-template-columns:300px 1fr;gap:20px}

    /* Sidebar (left) */
    .sidebar{position:sticky;top:88px;background:var(--card);border-radius:12px;padding:14px;box-shadow:var(--shadow);border:1px solid rgba(12,30,60,0.03)}
    .menu-item{display:flex;justify-content:space-between;align-items:center;padding:10px;border-radius:10px;text-decoration:none;color:#083047;font-weight:600}
    .menu-item:hover{background:#f6f9ff}
    .menu-item.active{background:linear-gradient(90deg,#f0f7ff,#f8fbff);color:var(--accent-600)}

    /* Main card */
    .card{background:var(--card);border-radius:12px;padding:16px;box-shadow:var(--shadow);border:1px solid rgba(12,30,60,0.03)}
    .metrics{display:flex;gap:12px;align-items:start;flex-wrap:wrap}
    .metric{flex:1;min-width:160px;background:linear-gradient(180deg,#fff,#fbfdff);padding:12px;border-radius:10px}
    .metric h4{margin:0;font-size:0.85rem;color:var(--muted)}
    .metric p{margin:8px 0 0 0;font-size:1.6rem;font-weight:800;color:#07203a}

    /* table & log */
    .top-paths{margin-top:8px}
    .log{margin-top:14px;max-height:420px;overflow:auto;border-radius:8px;padding:8px;border:1px solid #eef4fb;background:linear-gradient(180deg,#fcfeff,#f9fbff)}
    .log-item{padding:8px;border-bottom:1px dashed #eef5fb;font-size:0.95rem;color:#234}
    .log-item:last-child{border-bottom:none}

    /* responsive */
    @media (max-width:900px){
      .grid{grid-template-columns:1fr;}
      .search-input{display:none}
      .sidebar{display:flex;gap:8px;overflow:auto}
    }
  </style>
</head>
<body>
  <nav class="navbar" role="navigation" aria-label="Admin main navigation">
    <div class="brand">
      <div class="logo" aria-hidden="true"></div>
      <h1>CRIPFCnt â€” Admin</h1>
    </div>

    <div class="nav-links" role="menubar" aria-label="Admin pages">
      <a class="nav-link" href="/admin/users" data-route="/admin/users">Users</a>
      <a class="nav-link" href="/admin/visitors-live" data-route="/admin/visitors-live">Live logs</a>
      <a class="nav-link" href="/admin/visits" data-route="/admin/visits">Visits</a>
      <a class="nav-link" href="/admin/unique-visitors" data-route="/admin/unique-visitors">Unique</a>
    </div>

    <div class="nav-spacer" aria-hidden="true"></div>

    <div class="search-wrapper">
      <input class="search-input" placeholder="Search users or paths" aria-label="Search" />
    </div>

    <div class="user-menu" role="group" aria-label="User menu">
      <div class="user-name">Admin</div>
      <div class="avatar">A</div>
    </div>
  </nav>

  <main class="page">
    <div class="grid">
      <aside class="sidebar" aria-label="Admin sidebar">
        <a class="menu-item" href="/admin/users">ðŸ‘¥ Users</a>
        <a class="menu-item active" href="/admin/visitors-live">ðŸ“¡ Live logs</a>
        <a class="menu-item" href="/admin/visits">ðŸ“ˆ Visits</a>
        <a class="menu-item" href="/admin/unique-visitors">ðŸ”Ž Unique</a>
        <div style="height:12px"></div>
        <div style="font-size:0.85rem;color:var(--muted);">Quick filters</div>
        <div style="display:flex;flex-direction:column;gap:8px;margin-top:8px">
          <button onclick="window.location='/admin/visitors-live?period=day'" style="padding:8px;border-radius:8px;border:1px solid #eef4fb;background:#fff">Today</button>
          <button onclick="window.location='/admin/visitors-live?period=month'" style="padding:8px;border-radius:8px;border:1px solid #eef4fb;background:#fff">This month</button>
        </div>
      </aside>

      <section>
        <div class="card">
          <div style="display:flex;justify-content:space-between;align-items:center;gap:12px;flex-wrap:wrap">
            <div>
              <h2 style="margin:0">Live visitors</h2>
              <div style="color:var(--muted);font-size:0.9rem;margin-top:6px">Real-time overview of hits & unique visitors</div>
            </div>
            <div style="display:flex;gap:8px;align-items:center">
              <label style="font-size:0.85rem;color:var(--muted)">Refresh</label>
              <select id="refreshRate">
                <option value="5000">5s</option>
                <option value="10000">10s</option>
                <option value="30000">30s</option>
                <option value="0">Off</option>
              </select>
            </div>
          </div>

          <div class="metrics" style="margin-top:14px">
            <div class="metric">
              <h4>Total hits (today)</h4>
              <p id="totalHits">â€”</p>
            </div>
            <div class="metric">
              <h4>Unique visitors (today)</h4>
              <p id="uniqueToday">â€”</p>
            </div>
            <div class="metric" style="flex:2">
              <h4>Top paths (today)</h4>
              <div id="topPaths" class="top-paths"></div>
            </div>
          </div>

          <h4 style="margin-top:16px">Live activity log</h4>
          <div id="log" class="log" aria-live="polite"></div>
        </div>
      </section>
    </div>
  </main>

  <script>
    // Activate nav link based on current location
    (function (){
      const links = document.querySelectorAll('.nav-link');
      links.forEach(a => {
        if (location.pathname.startsWith(a.dataset.route)) a.classList.add('active');
      });
      // small helper to mark sidebar active
      const sidebar = document.querySelectorAll('.menu-item');
      sidebar.forEach(s => { if (location.pathname.startsWith(s.getAttribute('href'))) s.classList.add('active'); });
    })();

    // Polling logic (fetches summary endpoint)
    (function(){
      const totalHitsEl = document.getElementById('totalHits');
      const uniqueTodayEl = document.getElementById('uniqueToday');
      const topPathsEl = document.getElementById('topPaths');
      const logEl = document.getElementById('log');
      const refreshEl = document.getElementById('refreshRate');

      let timer = null;
      async function fetchAndRender(){
        try{
          const resp = await fetch('/admin/visitors/summary', { credentials: 'same-origin' });
          if (!resp.ok) throw new Error('status '+resp.status);
          const data = await resp.json();

          totalHitsEl.textContent = String(data.totalHits ?? '0');
          uniqueTodayEl.textContent = String(data.uniqueToday ?? '0');

          topPathsEl.innerHTML='';
          (data.topPaths||[]).forEach(tp=>{
            const el = document.createElement('div'); el.style.fontSize='0.95rem'; el.textContent = `${tp._id} â€” ${tp.hits} hits`; topPathsEl.appendChild(el);
          });

          const entry = document.createElement('div'); entry.className='log-item'; entry.textContent=`[${new Date(data.timestamp).toLocaleTimeString()}] total=${data.totalHits} unique=${data.uniqueToday}`; logEl.prepend(entry);
          while(logEl.children.length>400) logEl.removeChild(logEl.lastChild);
        }catch(e){
          const entry = document.createElement('div'); entry.className='log-item'; entry.textContent=`[${new Date().toLocaleTimeString()}] poll error: ${e.message||e}`; logEl.prepend(entry);
        }
      }

      function schedule(){
        const ms = Number(refreshEl.value);
        if (timer) clearInterval(timer);
        if (ms>0) timer = setInterval(fetchAndRender, ms);
      }

      refreshEl.addEventListener('change', ()=>{ schedule(); });

      // initial run
      fetchAndRender();
      schedule();
    })();
  </script>
</body>
</html>
